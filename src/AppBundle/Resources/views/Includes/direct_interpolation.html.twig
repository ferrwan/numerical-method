<div id="sixth-1" class="tab-pane fade in active" data-ng-controller="directInterpolationController">
  <div class="mt-15">
    <span class="fa fa-link"></span>
    <div class="badge">Direct Interpolation Method</div>
  </div>
  <div style="margin-top:15px">
    {% verbatim %}
    <form id="directInterpolationForm" class="form-horizontal" novalidate>
      <div class="form-group">
        <label for="pair" class="col-xs-4 control-label">How many pairs of <code>x</code> &amp; <code>y</code> do you want ? <br>(Default value = 2)</label>
        <div class="col-xs-2">
          <input type="number" id="pair" class="form-control" data-ng-model="pairDefault" min=2>
        </div>
      </div>
      <div class="form-group">
        <div data-ng-show="pairDefault" class="col-xs-5">
          <table class="table table-striped table-bordered table-hover">
            <tr class="th-center">
              <th>X</th>
              <th>Y</th>
            </tr>
            <tr data-ng-repeat="i in pairInit(pairDefault) track by $index">
              <td>
                <input type="number" class="form-control input-sm" data-ng-model="pairInit[$index].x">
              </td>
              <td>
                <input type="number" class="form-control input-sm" data-ng-model="pairInit[$index].y">
              </td>
            </tr>
          </table>
        </div>
      </div>
    </form>
    {% endverbatim %}
  </div>
</div>
