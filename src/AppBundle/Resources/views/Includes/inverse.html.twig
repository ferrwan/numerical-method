<div id="fourth-1" class="tab-pane fade in active" data-ng-controller="inverseController">
  <div class="mt-15">
    <span class="fa fa-link"></span>
    <div class="badge">Inverse Method</div>
  </div>
  <div style="margin-top:15px">
    <form id="cramerForm" class="form-horizontal">
      <div class="form-group">
      {% verbatim %}
        <label for="sumFunc" class="col-xs-3 control-label">How many functions do you want ?</label>
        <div class="col-xs-3">
          <input type="number" class="form-control" id="sumFunc" data-ng-model="sumFunc">
        </div>
      </div>
      <div class="form-group" data-ng-show="sumFunc">
        <label for="" class="col-xs-3 control-label">Input the Functions :</label>
        <div class="row col-xs-12">
          <div data-ng-repeat="i in getNumber(sumFunc) track by $index">
            <div class="col-xs-2 control-label">Equation {{ $index + 1 }} :</div>
            <div class="col-xs-10">
              <div data-ng-repeat="j in alpha">
                {{ alpha }}
              </div>
            </div>
          </div>
        </div>
      </div>
      {% endverbatim %}
    </form>
  </div>
</div>